---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Picture } from "astro:assets";
import Logo from "assets/sarpin_devs_logo.png";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
{
    title: "Inicio",
    path: "/",
  },
   {
    title: "Precios",
    path: "/pricing",
  },
  {
    title: "Nosotros",
    path: "/nosotros",
  },
  {
    title: "Blog",
    badge: true,
    path: "/blog",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg">
              <Picture
              src={Logo}
              alt="Logo"
              sizes="(max-width: 185px)"
              loading="eager"/>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item) => (
              <>
                {item && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-cyan-500">
                      <span> {item.title}</span>
                     {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New posts
                        </span>
                      )} 
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div>
          <div class="mt-5 lg:hidden items-center gap-4">
            <Link href="/contact" size="md">Contacto</Link>
          </div>
        </div>     
      </MenuItems>

    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        {/*<a href="#">Log in</a> */}
        <Link href="/contact" size="md">Contacto</Link>
      </div>
    </div>
  </header>
</Container>